---
import Layout from "../shared/Layout.astro";

interface Props {
    title: string;
    message: string;
}

const { title, message } = Astro.props;

---

<Layout title="Auth">
    <div
        class="flex min-h-screen items-center justify-center bg-gradient-to-br from-[#f0f8ff] to-[#e6f3ff] p-4"
    >
        <div
            class="w-full max-w-md overflow-hidden rounded-xl bg-white shadow-xl"
        >
            <div class="bg-[#3498db] p-6 text-center">
                <h1 class="text-2xl font-bold text-white">{ title }</h1>
                <p class="mt-2 text-[#cce7ff]">
                    { message }
                </p>
            </div>
            <slot />
        </div>
    </div>
    
</Layout>
