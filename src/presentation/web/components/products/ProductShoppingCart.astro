---
interface Props {
    name: string;
    description: string;
    pathImg: string;
    price: number;
    amount: number;
}

const { name, description, pathImg, price, amount } = Astro.props;
---

<div class="flex items-center space-x-4 py-3 border-b">
    <div class="flex-shrink-0 w-16 h-16 bg-gray-200 rounded-md overflow-hidden">
        <img
            src={pathImg}
            alt={name}
            class="w-full h-full object-center object-cover"
        />
    </div>
    <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate">
            {name}
        </p>
        <p class="text-sm text-gray-500">{description}</p>
        <div class="flex items-center mt-1">
            <button
                class="text-gray-500 hover:text-picton-blue-500 focus:outline-none"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M20 12H4"></path>
                </svg>
            </button>
            <span class="mx-2 text-gray-700">{amount}</span>
            <button
                class="text-gray-500 hover:text-picton-blue-500 focus:outline-none"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
            </button>
        </div>
    </div>
    <div class="flex-shrink-0 flex flex-col items-end">
        <span class="text-sm font-medium text-gray-900">${price}</span>
        <button
            class="text-gray-400 hover:text-red-500 focus:outline-none mt-1"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                ></path>
            </svg>
        </button>
    </div>
</div>
