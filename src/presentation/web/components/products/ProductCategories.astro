---

interface Props{
    name: string;
    description: string;
    text: string;
    pathImg: string;
    href: string;
}

const { name, description, text, pathImg, href } = Astro.props;

---

<div class="group relative">
    <div
        class="relative w-full h-80 bg-white rounded-lg overflow-hidden group-hover:opacity-75 sm:aspect-w-2 sm:aspect-h-1 sm:h-64 lg:aspect-w-1 lg:aspect-h-1"
    >
        <img
            src={ pathImg }
            alt={ description }
            class="w-full h-full object-center object-cover"
        />
    </div>
    <h3 class="mt-6 text-lg text-gray-900 text-center">
        <a href={href}>
            <span class="absolute inset-0"></span>
            { name }
        </a>
    </h3>
    <p class="text-base text-gray-500 text-center">
        { text }
    </p>
</div>
