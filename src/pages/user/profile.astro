    document.addEventListener("astro:page-load", () => {
        window.addEventListener("click", (event: MouseEvent) => {
            const modals = document.getElementsByClassName(
                "modal",
            ) as HTMLCollectionOf<HTMLElement>;

            for (let i = 0; i < modals.length; i++) {
                if (event.target === modals[i]) {
                    modals[i].style.display = "none";
                }
            }
        });

        // Prevenir envío de formularios (simulación)
        document.addEventListener("submit", (event: Event) => {
            event.preventDefault();

            const form = event.target as HTMLFormElement;
            const modal = form.closest(".modal") as HTMLElement | null;

            if (modal && modal.id) {
                modal.style.display = "none";
                alert("Cambios guardados correctamente (simulación)");
            } else {
                console.warn("No se encontró un modal padre con ID.");
            }
        });
    });
</script>
